@model LoginModel
@{
    ViewData.SetTitle(Localizer[VeloTexts.LogIn]);
}

<form method="post">
    @if (Model.ShowErrorMessage)
    {
        <div class="m-2">
            @VeloHtml.Alert(MessageType.Danger, Localizer[VeloTexts.InvalidLoginAttempt])
        </div>
    }

    <div class="card m-2">
        @VeloHtml.TitleCardHeader()
        <div class="card-body">
            @VeloHtml.TextInputField(nameof(Model.Email), Model.Email, Localizer[VeloTexts.EMail], autoFocus: true)
            @VeloHtml.PasswordInputField(nameof(Model.Password), Model.Password, Localizer[VeloTexts.Password])
            @VeloHtml.CheckBoxField(nameof(Model.RememberMe), Model.RememberMe, Localizer[VeloTexts.RememberMe])

        </div>
        <div class="card-footer">
            <button class="btn btn-primary">@Localizer[VeloTexts.Ok]</button>
        </div>
    </div>
</form>
