                <input asp-for="Seller.Token" class="form-control" />
                <span asp-validation-for="Seller.Token" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
