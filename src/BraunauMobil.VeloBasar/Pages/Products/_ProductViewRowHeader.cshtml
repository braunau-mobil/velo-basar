@model ProductViewModel
<th style="width: auto;" scope="col">@Html.DisplayNameFor(vm => vm.Product.Id)</th>
<th style="width: 10%;" scope="col">@Html.DisplayNameFor(vm => vm.Product.Brand)</th>
<th style="width: 10%;" scope="col">@Html.DisplayNameFor(vm => vm.Product.Type)</th>
<th style="width: 20%;" scope="col">@Html.DisplayNameFor(vm => vm.Product.Color)</th>
<th style="width: 10%;" scope="col">@Html.DisplayNameFor(vm => vm.Product.FrameNumber)</th>
<th style="width: 30%;" scope="col">@Html.DisplayNameFor(vm => vm.Product.Description)</th>
<th style="width: 5%;" scope="col">@Html.DisplayNameFor(vm => vm.Product.TireSize)</th>
<th style="width: 5%;" scope="col" Condition="Model.ShowSeller">@Html.DisplayNameFor(vm => vm.Product.Seller)</th>
<th style="width: 10%;" scope="col">@Html.DisplayNameFor(vm => vm.Product.Price)</th>
<th style="width: auto;" scope="col">@Localizer["Status"]</th>
