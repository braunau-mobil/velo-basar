@page
@model EditModel

@{
    ViewData["Title"] = Localizer["Artikel bearbeiten"];
}

<form method="post">
    <div class="card my-3">
        <div class="card-header d-flex justify-content-between align-items-md-center">
            <div class="mr-auto"><h5>@ViewData["Title"]</h5></div>
            <div class="d-flex justify-content-end">
                <input type="submit" value="@Localizer["Speichern"]" class="btn btn-primary mx-1" asp-route-target="@Request.Headers["Referer"]" />
                <a href="@Request.Headers["Referer"]" class="btn btn-secondary mx-1">@Localizer["Abbrechen"]</a>
            </div>
        </div>

        <div class="card-body">
            <input type="hidden" asp-for="Product.Id" />
            <input type="hidden" asp-for="Product.BasarId" />
            <input type="hidden" asp-for="Product.SellerId" />
            <div class="form-group row">
                <label asp-for="Product.Type" class="col-2 col-form-label"></label>
                <select asp-for="Product.TypeId" class="col-10 form-control" asp-items="ViewBag.ProductTypes"></select>
            </div>
            <div class="form-group row">
                <label asp-for="Product.Brand" class="col-2 col-form-label"></label>
                <select asp-for="Product.BrandId" class="col-10 form-control" asp-items="ViewBag.Brands"></select>
            </div>
            <div class="form-group row">
                <label asp-for="Product.Color" class="col-2 col-form-label"></label>
                <input asp-for="Product.Color" class="col-10 form-control" velo-validation-for="Product.Color" />
            </div>
            <div class="form-group row">
                <label asp-for="Product.Description" class="col-2 col-form-label"></label>
                <input asp-for="Product.Description" class="col-10 form-control" velo-validation-for="Product.Description" />
            </div>
            <div class="form-group row">
                <label asp-for="Product.FrameNumber" class="col-2 col-form-label"></label>
                <input asp-for="Product.FrameNumber" class="col-10 form-control" velo-validation-for="Product.FrameNumber" />
            </div>
            <div class="form-group row">
                <label asp-for="Product.TireSize" class="col-2 col-form-label"></label>
                <input asp-for="Product.TireSize" class="col-10 form-control" velo-validation-for="Product.TireSize" />
            </div>
            <div class="form-group row">
                <label asp-for="Product.Price" class="col-2 col-form-label"></label>
                <input asp-for="Product.Price" class="col-10 form-control" velo-validation-for="Product.Price" />
            </div>
        </div>
    </div>
</form>
