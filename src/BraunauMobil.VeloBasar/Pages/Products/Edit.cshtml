@page
@model BraunauMobil.VeloBasar.Pages.Products.EditModel

@{
    ViewData["Title"] = "Artikel bearbeiten";
}

<h2>Artikel bearbeiten</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.Id" />
            <div class="form-group">
                <label asp-for="Product.Type" class="control-label"></label>
                <input asp-for="Product.Type" class="form-control" />
                <span asp-validation-for="Product.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Brand" class="control-label"></label>
                <input asp-for="Product.Brand" class="form-control" />
                <span asp-validation-for="Product.Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Color" class="control-label"></label>
                <input asp-for="Product.Color" class="form-control" />
                <span asp-validation-for="Product.Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <input asp-for="Product.Description" class="form-control" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.FrameNumber" class="control-label"></label>
                <input asp-for="Product.FrameNumber" class="form-control" />
                <span asp-validation-for="Product.FrameNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.TireSize" class="control-label"></label>
                <input asp-for="Product.TireSize" class="form-control" />
                <span asp-validation-for="Product.TireSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" asp-all-route-data="@Model.GetRoute()" asp-route-target="@Request.Headers["Referer"]" />
                <a href="@Request.Headers["Referer"]" class="btn btn-default">Abbrechen</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
