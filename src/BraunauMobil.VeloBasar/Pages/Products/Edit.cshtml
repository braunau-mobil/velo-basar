@page
@model EditModel

@{
    ViewData["Title"] = Localizer["Artikel bearbeiten"];
}

<form method="post">
    <div class="card my-3">
        <div class="card-header d-flex justify-content-between align-items-md-center">
            <div class="mr-auto"><h5>@ViewData["Title"]</h5></div>
            <div class="d-flex justify-content-end">
                <input type="submit" value="@Localizer["Speichern"]" class="btn btn-primary mx-1" asp-all-route-data="@Model.GetRoute()" asp-route-target="@Request.Headers["Referer"]" />
                <a href="@Request.Headers["Referer"]" class="btn btn-secondary mx-1">@Localizer["Abbrechen"]</a>
            </div>
        </div>

        <div class="card-body">
            <div class="column">
                <input type="hidden" asp-for="Product.Id" />
                <div class="form-group">
                    <label asp-for="Product.Type" class="control-label"></label>
                    <select asp-for="Product.TypeId" class="form-control" asp-items="ViewBag.ProductTypes"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Product.Brand" class="control-label"></label>
                    <select asp-for="Product.BrandId" class="form-control" asp-items="ViewBag.Brands"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Product.Color" class="control-label"></label>
                    <input asp-for="Product.Color" class="form-control" velo-validation-for="Product.Color" />
                </div>
                <div class="form-group">
                    <label asp-for="Product.Description" class="control-label"></label>
                    <input asp-for="Product.Description" class="form-control" velo-validation-for="Product.Description" />
                </div>
                <div class="form-group">
                    <label asp-for="Product.FrameNumber" class="control-label"></label>
                    <input asp-for="Product.FrameNumber" class="form-control" velo-validation-for="Product.FrameNumber" />
                </div>
                <div class="form-group">
                    <label asp-for="Product.TireSize" class="control-label"></label>
                    <input asp-for="Product.TireSize" class="form-control" velo-validation-for="Product.TireSize" />
                </div>
                <div class="form-group">
                    <label asp-for="Product.Price" class="control-label"></label>
                    <input asp-for="Product.Price" class="form-control" velo-validation-for="Product.Price" />
                </div>
            </div>
        </div>
    </div>
</form>
