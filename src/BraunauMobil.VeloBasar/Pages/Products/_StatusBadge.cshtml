@model Product

@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> Localizer

@{
    var css = "";
    var text = "";
    var icon = "";

    if (Model.StorageState == StorageState.Available && Model.ValueStatus == ValueStatus.NotSettled)
    {
        text = Localizer["Verfügbar"];
        css = "badge-success";
    }
    else if (Model.StorageState == Models.StorageState.Sold && Model.ValueStatus == ValueStatus.NotSettled)
    {
        text = Localizer["Verkauft"];
        css = "badge-warning";
        icon = "$";
    }
    else if (Model.StorageState == StorageState.Available && Model.ValueStatus == ValueStatus.Settled)
    {
        text = Localizer["Abgeholt"];
        css = "badge-secondary";
    }
    else if (Model.StorageState == StorageState.Sold && Model.ValueStatus == ValueStatus.Settled)
    {
        text = Localizer["Abgerechnet"];
        css = "badge-secondary";
        icon = "$";
    }
    else if (Model.StorageState == StorageState.Locked)
    {
        text = Localizer["Gesperrt"];
        css = "badge-danger";
    }
    else if (Model.StorageState == StorageState.Gone)
    {
        text = Localizer["Verschwunden"];
        css = "badge-danger";
    }
}

<span class="badge badge-pill @css">
    @if (!string.IsNullOrEmpty(icon))
    {
        @icon
    }
    @text
</span>