@model Margins

<div class="card my-3">
    <div class="card-header d-flex justify-content-between align-items-md-center">
        <div class="mr-auto"><h5>@Localizer["Seitenränder"]</h5></div>
    </div>

    <div class="card-body">
        <div class="column">
            <div class="form-group">
                <label asp-for="Left" class="control-label"></label>
                <input asp-for="Left" class="form-control" velo-validation-for="Left" />
            </div>
            <div class="form-group">
                <label asp-for="Top" class="control-label"></label>
                <input asp-for="Top" class="form-control" velo-validation-for="Top" />
            </div>
            <div class="form-group">
                <label asp-for="Right" class="control-label"></label>
                <input asp-for="Right" class="form-control" velo-validation-for="Right" />
            </div>
            <div class="form-group">
                <label asp-for="Bottom" class="control-label"></label>
                <input asp-for="Bottom" class="form-control" velo-validation-for="Bottom" />
            </div>
        </div>
    </div>
</div>
