@page
@model IndexModel

@{
    ViewData["Title"] = "Initial Setup";
}

<h2>@ViewData["Title"]</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Config.AdminUserEMail" class="control-label"></label>
                <input asp-for="Config.AdminUserEMail" class="form-control" />
                <span asp-validation-for="Config.AdminUserEMail" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Start" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}