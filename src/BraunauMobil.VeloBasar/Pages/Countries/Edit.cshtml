@page
@model EditModel

@{
    ViewData["Title"] = Localizer["Land bearbeiten"];
}

<form method="post">
    <div class="card my-3">
        <div class="card-header d-flex justify-content-between align-items-md-center">
            <div class="mr-auto"><h5>@ViewData["Title"]</h5></div>
            <div class="d-flex justify-content-end">
                <input type="submit" value="@Localizer["Speichern"]" class="btn btn-primary mx-1" velo-page="@Model.GetListPage()" />
                <a velo-page="@Model.GetListPage()" class="btn btn-secondary mx-1">@Localizer["Abbrechen"]</a>
            </div>
        </div>

        <div class="card-body">
            <input type="hidden" asp-for="Country.Id" />
            <div class="form-group row">
                <label asp-for="Country.Name" class="col-2 col-form-label"></label>
                <input asp-for="Country.Name" class="col-10 form-control" velo-validation-for="Country.Name" />
            </div>
            <div class="form-group row">
                <label asp-for="Country.Iso3166Alpha3Code" class="col-2 col-form-label"></label>
                <input asp-for="Country.Iso3166Alpha3Code" class="col-10 form-control" velo-validation-for="Country.Iso3166Alpha3Code" />
            </div>
        </div>
    </div>
</form>

