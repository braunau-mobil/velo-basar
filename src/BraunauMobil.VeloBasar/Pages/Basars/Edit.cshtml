@page
@model EditModel

@{
    ViewData["Title"] = "Basar bearbeiten";
}

<form method="post">
    <div class="card my-3">
        <div class="card-header d-flex justify-content-between align-items-md-center">
            <div class="mr-auto"><h5>@ViewData["Title"]</h5></div>
            <div class="d-flex justify-content-end">
                <input type="submit" value="@Localizer["Speichern"]" class="btn btn-primary mx-1" asp-all-route-data="@Model.GetRoute()" asp-route-target="/Basars/List" />
                <a asp-all-route-data="@Model.GetRoute()" asp-page="/Basars/List" class="btn btn-secondary mx-1">@Localizer["Abbrechen"]</a>
            </div>
        </div>

        <div class="card-body">
            <div class="column">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="BasarToEdit.Id" />
                <div class="form-group">
                    <label asp-for="BasarToEdit.Date" class="control-label"></label>
                    <input asp-for="BasarToEdit.Date" class="form-control" />
                    <span asp-validation-for="BasarToEdit.Date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BasarToEdit.Name" class="control-label"></label>
                    <input asp-for="BasarToEdit.Name" class="form-control" />
                    <span asp-validation-for="BasarToEdit.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BasarToEdit.ProductCommission" class="control-label"></label>
                    <input asp-for="BasarToEdit.ProductCommission" class="form-control" />
                    <span asp-validation-for="BasarToEdit.ProductCommission" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BasarToEdit.ProductDiscount" class="control-label"></label>
                    <input asp-for="BasarToEdit.ProductDiscount" class="form-control" />
                    <span asp-validation-for="BasarToEdit.ProductDiscount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BasarToEdit.SellerDiscount" class="control-label"></label>
                    <input asp-for="BasarToEdit.SellerDiscount" class="form-control" />
                    <span asp-validation-for="BasarToEdit.SellerDiscount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
</form>