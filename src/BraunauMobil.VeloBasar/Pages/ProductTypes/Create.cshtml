@page
@model CreateModel
@{
    ViewData["Title"] = Localizer["Produkt Typ hinzufügen"];
}

<form method="post">
    <div class="card my-3">
        <div class="card-header d-flex justify-content-between align-items-md-center">
            <div class="mr-auto"><h5>@ViewData["Title"]</h5></div>
            <div class="d-flex justify-content-end">
                <input type="submit" value="@Localizer["Speichern"]" class="btn btn-primary mx-1" asp-all-route-data="@Model.GetRoute()" asp-route-target="/ProductTypes/List" />
                <a asp-all-route-data="@Model.GetRoute()" asp-page="/ProductTypes/List" class="btn btn-secondary mx-1">@Localizer["Abbrechen"]</a>
            </div>
        </div>

        <div class="card-body">
            <div class="column">
                <div class="form-group">
                    <label asp-for="ProductType.Name" class="control-label"></label>
                    <input asp-for="ProductType.Name" class="form-control" velo-validation-for="ProductType.Name" />
                </div>
                <div class="form-group">
                    <label asp-for="ProductType.Status" class="control-label"></label>
                    <select asp-for="ProductType.Status" asp-items="@Html.GetEnumSelectList<ModelState>()" class="form-control"></select>
                </div>
            </div>
        </div>
    </div>
</form>
