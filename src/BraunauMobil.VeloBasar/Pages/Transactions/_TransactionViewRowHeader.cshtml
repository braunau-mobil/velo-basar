@model TransactionViewModel
<th style="width: auto;" scope="col">@Html.DisplayNameFor(vm => vm.Transaction.Number)</th>
<th style="width: 10%;" scope="col">@Html.DisplayNameFor(vm => vm.Transaction.TimeStamp)</th>
<th Condition="Model.ShowType" style="width: auto" scope="col">@Html.DisplayNameFor(vm => vm.Transaction.Type)</th>
<th style="width: 10%;" scope="col">@Html.DisplayNameFor(vm => vm.ProductCount)</th>
<th style="width: 70%" scope="col">
    @if (Model.ShowNotes)
    {
        @Html.DisplayNameFor(vm => vm.Transaction.Notes)
    }
</th>
<th style="width: 10%;" scope="col" align="right">@Html.DisplayNameFor(vm => vm.Amount)</th>
<th Condition="Model.ShowDocumentLink" style="width: auto" scope="col"></th>