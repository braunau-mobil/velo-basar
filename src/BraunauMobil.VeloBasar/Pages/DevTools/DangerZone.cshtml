@page
@model DangerZoneModel
@{
    ViewData["Title"] = "Danger Zone1";
}

<h2>DangerZone</h2>
<img src="~/images/DangerZone/274px-DIN_4844-2_Warnung_vor_Laserstrahl_D-W010.svg.png" />
<img src="~/images/DangerZone/250px-Skull_and_Crossbones.svg.png" />
<img src="~/images/DangerZone/274px-Biohazard.svg.png" />

<h4>Drop Database and generate sample data, this can take very long!!</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label class="control-label">Config.AdminUserEMail</label>
                <input asp-for="Config.AdminUserEMail" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Config.FirstBasarDate</label>
                <input asp-for="Config.FirstBasarDate" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Config.BasarCount</label>
                <input asp-for="Config.BasarCount" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Config.MinAcceptancesPerSeller</label>
                <input asp-for="Config.MinAcceptancesPerSeller" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Config.MaxAcceptancesPerSeller</label>
                <input asp-for="Config.MaxAcceptancesPerSeller" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Config.MinSellers</label>
                <input asp-for="Config.MinSellers" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Config.MaxSellers</label>
                <input asp-for="Config.MaxSellers" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Config.MeanProductsPerSeller</label>
                <input asp-for="Config.MeanProductsPerSeller" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Config.StdDevProductsPerSeller</label>
                <input asp-for="Config.StdDevProductsPerSeller" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Config.MeanPrice</label>
                <input asp-for="Config.MeanPrice" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Config.StdDevPrice</label>
                <input asp-for="Config.StdDevPrice" class="form-control" />
            </div>
            <div class="checkbox">
                <label>@Html.CheckBoxFor(x => Model.Config.GenerateCountries)&nbsp;@Html.DisplayNameFor(x => Model.Config.GenerateCountries)</label>
            </div>
            <div class="checkbox">
                <label>@Html.CheckBoxFor(x => Model.Config.GenerateBrands)&nbsp;@Html.DisplayNameFor(x => Model.Config.GenerateBrands)</label>
            </div>
            <div class="checkbox">
                <label>@Html.CheckBoxFor(x => Model.Config.GenerateProductTypes)&nbsp;@Html.DisplayNameFor(x => Model.Config.GenerateProductTypes)</label>
            </div>
            <div class="form-group">
                <input type="submit" value="Start" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
