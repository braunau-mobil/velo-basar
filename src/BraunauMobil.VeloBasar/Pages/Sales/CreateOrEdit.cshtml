@page
@model BraunauMobil.VeloBasar.Pages.Sales.CreateOrEditModel

@using Microsoft.AspNetCore.Mvc.Localization
@using VeloBasar.Resources

@inject IHtmlLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Localizer["Neuer Verkauf"];
}

<div class="card my-3">
    <div class="card-header d-flex justify-content-between align-items-md-center">
        <div>
            <h5 class="mx-2">
                @if (Model.Sale != null)
                {
                    @Localizer["Verkauf #{0}", Model.Sale.Number]
                }
                else
                {
                    @Localizer["Neuer Verkauf"]
                }
            </h5>
        </div>
        @if (Model.Sale != null)
        {
            <div><a asp-page="/Sales/Print" asp-all-route-data="@Model.GetRoute()" asp-route-saleID="@Model.Sale.Id" target="_blank" class="ml-auto btn btn-primary">@Localizer["Rechnung drucken"]</a></div>
        }
    </div>

    <div class="card-body p-0">
        <partial name="/Pages/Products/_Table.cshtml" model="@new ViewModels.ProductsViewModel(Model.Basar, Model.Products)" />

        <div class="col-md-4">
            <form method="post">
                @if (!string.IsNullOrEmpty(Model.ErrorText))
                {
                    <div class="text-danger">@Model.ErrorText</div>
                }
                <div class="form-group">
                    <label asp-for="ProductId" class="control-label"></label>
                    <input asp-for="ProductId" class="form-control" />
                    <span asp-validation-for="ProductId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="@Localizer["Hinzufügen"]" class="btn btn-primary" asp-all-route-data="@Model.GetRoute()" asp-route-saleId="@Model.Sale?.Id" />
                </div>
            </form>
        </div>
    </div>
</div>
