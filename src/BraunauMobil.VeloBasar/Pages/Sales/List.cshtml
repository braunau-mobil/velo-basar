@page
@model ListModel

@{
    ViewData["Title"] = Localizer["Verkäufe"];
}

<form velo-page="@Model.GetSearchPage()" method="get">
    <div class="card my-3">
        <div class="card-header d-flex justify-content-between align-items-md-center">
            <div><h5 class="mx-2">@Localizer["Verkäufe"]</h5></div>
            <partial name="/Pages/Shared/_Search.cshtml" model="@Model" />
        </div>

        <div class="card-body p-0">

            <partial name="/Pages/Transactions/_TransactionsView.cshtml" model="@Model.Sales" />
        </div>
    </div>
</form>

<partial name="/Pages/Shared/_Pagination.cshtml" model="@Model.Sales" />
